@model PoolrApp.Models.ViewModels.LoginViewModel

<div class="row" style="margin-top:30px;margin-left:50px">

        <div class="col-6 ">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null))
            {
                    @Html.AntiForgeryToken()

                      <div class="form-group">
                        <div class="col-md-offset-3 col-md-5">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                     </div>
                   
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-3" , style = "font-size:12px;" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-3", style = "font-size:12px;" })
                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-5">
                            @Html.DevExpress().Button(
                            settings =>
                            {
                                settings.Name = "btnLogin";
                                settings.Width = Unit.Percentage(100);
                                settings.Height = 30;
                                settings.Text = "Login";
                                settings.Styles.Style.Font.Bold = true;
                                settings.Styles.Style.Font.Size = 9;
                                settings.UseSubmitBehavior = true;
                            }).GetHtml()
                        </div>
                    </div>

                }
            </section>
        </div>


</div>







